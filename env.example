# Gemini API Keys (Get from https://aistudio.google.com/app/apikey)
GOOGLE_API_KEY=your_google_gemini_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Optional: Multiple keys for rotation and load balancing
# GEMINI_API_KEY_1=your_key_1
# GEMINI_API_KEY_2=your_key_2
# GEMINI_API_KEY_3=your_key_3

# Model Configuration
MODEL=gemini-2.5-flash
EMBED_MODEL=sentence-transformers/all-MiniLM-L6-v2

# API Security
API_TOKEN=your_secure_random_token_here

# Redis (for key rotation counters and caching)
REDIS_URL=redis://localhost:6379

# Neo4j Configuration (Knowledge Graph)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Vector Store Configuration
VECTOR_BACKEND=chroma  # Options: chroma, qdrant, pinecone, memory

# Qdrant Configuration (if using Qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=story_memories

# Pinecone Configuration (if using Pinecone)
# PINECONE_API_KEY=
# PINECONE_ENVIRONMENT=us-west1-gcp
# PINECONE_INDEX=story-memories

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
